
<div style="display: flex;flex-direction: column;align-items: center;margin-top: 150px;">
    <h1 style="margin-bottom: 30px;">EDIT USER</h1>
    <%= form_with(model: @user, url:editprofile_path, method: :put) do |form| %>
        <div class="form-group", style="margin-bottom: 10px;">
            <%= form.label :name, class: 'control-label' %>
            <%= form.text_field :username, class: 'form-control' %>
        </div>

        <div class="form-group", style="margin-bottom: 30px;">
            <%= form.label :address, class: 'control-label' %>
            <%= form.text_field :address, class: 'form-control' %>
        </div>

        <div class="form-group", style="margin-bottom: 30px;">
            <%= form.label :password, class: 'control-label' %>
            <%= form.text_field :password, class: 'form-control' %>
        </div>

        <div class="form-group">
            <%= form.submit 'Update User', class: 'btn btn-primary' %>
        </div>
    <% end %>
</div>


